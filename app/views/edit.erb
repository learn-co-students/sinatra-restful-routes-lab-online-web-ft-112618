<form method="post" action="/recipes/<%=@recipe.id%>">
    <input id="hidden" type="hidden" name="_method" value="patch" />
    <input id="name" name="name" value="<%=@recipe.name%>">
    <input id="ingredients" name="ingredients" value="<%=@recipe.ingredients%>">
    <input id="cook_time" name="cook_time" value="<%=@recipe.cook_time%>">
    <input type="submit" value="Update Article">
</form>
